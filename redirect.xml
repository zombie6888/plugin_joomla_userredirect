<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="user">
	<name>plg_redirectuser_joomla</name>
	<author>zhukov sergey</author>
	<creationDate>April 2014</creationDate>
	<copyright></copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>zom688@gmail.com</authorEmail>
	<authorUrl>www.websiteprog.ru</authorUrl>
	<version>3.0.0</version>
	<description>Redirect user after registration</description>
	<files>
		<filename plugin="redirect">redirect.php</filename>
		<filename>index.html</filename>
	</files>	
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="url" type="text"					
					default=""
					description="Url to redirect after registration"
					label="Redirect URL"
				>					
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
